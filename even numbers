#include <stdio.h>/*
Burada i++ yapmak yerine i+=2 yaparak da çift sayıları yazdırabiliriz.
--Boşuna if kontrolü yapmamış oluruz.--
  for(int i=0;i<=20;i+=2){
        printf("0'dan 20'ye kadar olan çift sayılar: :%d \n" , i);
    }
*/
int main(int argc, char const *argv[])
{
    for(int i=0;i<=20;i++){
        if (i%2==0)
        {
            printf("0'dan 20'ye kadar olan çift sayılar: :%d \n" , i);
        }
        
        
    }
    return 0;
}
